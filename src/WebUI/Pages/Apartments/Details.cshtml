@page
@model WaterMeterManager.WebUI.Pages.Apartments.DetailsModel
@{
    ViewData["Title"] = "Apartment";
}

<h1>
    Apartment
    @Html.ValueFor(model => model.Apartment.Number),
    details
</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Date added
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apartment.Created)
        </dd>
        <dt class="col-sm-2">
            Last Modified
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apartment.LastModified)
        </dd>
        <dt class="col-sm-2">
            Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apartment.Number)
        </dd>
        <dt class="col-sm-2">
            Area
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apartment.Area)
        </dd>
        <dt class="col-sm-2">
            Registered meters
        </dt>
    </dl>
    <div>
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Serial number
                    </th>
                    <th>
                        Meter type
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Meters)
                {
                    <tr class="table-row">
                        <td>
                            @Html.DisplayFor(modelItem => item.SerialNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            <a asp-page="../Meters/Details" asp-route-id="@item.MeterId">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>