@page
@model WaterMeterManager.WebUI.Pages.Buildings.DetailsModel
@{
    ViewData["Title"] = "Building";
}

<h1>
    @Html.ValueFor(model => model.Building.Street),
    @Html.ValueFor(model => model.Building.Number) -
    @Html.ValueFor(model => model.Building.City) details
</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Date added
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Building.Created)
        </dd>
        <dt class="col-sm-2">
            Last Modified
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Building.LastModified)
        </dd>
        <dt class="col-sm-2">
            Registered apartments
        </dt>
    </dl>
    <div>
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Number
                    </th>
                    <th>
                        Area
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Apartments)
                {
                    <tr class="table-row">
                        <td>
                            @Html.DisplayFor(modelItem => item.Number)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Area)
                        </td>
                        <td>
                            <a asp-page="./Apartment/Details" asp-route-id="@item.ApartmentId">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>