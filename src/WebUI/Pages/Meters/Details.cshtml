@page
@model WaterMeterManager.WebUI.Pages.Apartments.Meters.DetailsModel
@{
    ViewData["Title"] = "Meter";
}

<h1>
    Meter
    @Html.ValueFor(model => model.Meter.SerialNumber),
    details
</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Last Read Value
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meter.LastReadingValue)
        </dd>
        <dt class="col-sm-2">
            Date added
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meter.Created)
        </dd>
        <dt class="col-sm-2">
            Last Modified
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meter.LastModified)
        </dd>
    </dl>
</div>